/**app.wxss**/
page{
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*justify-content: space-between;*/
  box-sizing: border-box;
} 
.mod-btn-line{
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.mod-btn{
  height: 84rpx;
  line-height: 84rpx;
  font-size: 36rpx;
}
.ext-btn-blue{
    width: 100%;
    background: #589AF4;
    color: #fff;
}
.ext-btn-red{
    width: 100%;
    background: #e94f4f;
    color: #fff;
}

.hide{display: none!important;}
.hidden{visibility: hidden!important;}

.tips{
    display: block;
    width: 100%;
    font-size: 28rpx;
    color: #888888;
    background: #fff7dd;
    text-align: center;
    line-height: 34rpx;
    padding: 28rpx 0 20rpx; 
}
.tips .ico-tips{
    display: inline-block;
    width: 40rpx;
    height: 34rpx;
    vertical-align: top;
    margin-right: 12rpx;
}
.tips .tips-text{
    display: inline-block;
    max-width: 80%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; 
}

.menu{
  display: flex;
  width: 100%;
  height: 98rpx;
  background: #f7f7fa;
  border-top: 1px solid #bfbfc3;
}
.menu-item{
  display: block;
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  color: #7f8389;
  padding-top: 12rpx;
}
.menu-ico{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto 9rpx;
  background-size: 100%;
  
}
.menu-item.on{
  color: #579af4;
}

.ico-msglist{
  width: 50rpx;
  height: 50rpx;
}

.ico-person{
  width: 50rpx;
  height: 50rpx;
}
