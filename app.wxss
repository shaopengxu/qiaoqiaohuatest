.arrow-right{
  width: 16rpx;
  height: 26rpx;
}
.ico-warn{
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
}
.mod-pop{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9;
}
.mod-pop .pop-main{
    position: absolute;
    left: 50%;
    top: 85rpx;
    margin: 0 0 0 -280rpx;
    width: 560rpx;
    background: #fff;
    z-index: 11;
    text-align: center;
    border-radius: 7rpx;
}
.mod-pop .pop-title{
    display: block;
    font-size: 36rpx;
    line-height: 2;
    padding: 60rpx 0 3rpx;
}
.mod-pop .pop-error{
    color: #e64340;
    font-size: 24rpx;
    line-height: 1.5;
}
.mod-pop .pop-close{
    position: absolute;
    right: 0;
    top: 0;
    padding: 40rpx;
}
.mod-pop .pop-close image{
    width: 24rpx;
    height: 24rpx;
}
.keyboard{
