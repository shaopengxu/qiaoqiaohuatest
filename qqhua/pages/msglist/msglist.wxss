.scrollview{
    position: relative;
    flex: 1;
    width: 100%;
}
.item{
    display: flex;
    padding: 20rpx 10rpx 16rpx;
    border-bottom:1px solid #d8d8d8;
}
.item-avatar{
    position: relative;
}
.msgtips{
    position: absolute;
    right: 7rpx;
    top:-14rpx;
    width: 36rpx;
    height: 36rpx;
    overflow: hidden;
    background: #f12c20;
    color: #fff;
    font-size: 26rpx;
    border-radius: 50%;
    text-align: center;
}
.item-avatar image{
    width:100rpx;
    height: 100rpx;
    border-radius: 5rpx;
    margin-right: 20rpx;
}
.item-msgcnt{
    flex: 1;
    line-height: 1.5;
    padding-top: 5rpx;
    overflow: hidden;
}
.item-msgcnt .title{
    display: block;
    font-size: 36rpx;
    color: #000;
}
.item-msgcnt .text{
    display: block;
    font-size: 28rpx;
    color: #888888;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 90%;
}
.item-date{
    padding-top: 6rpx;
    color: #b5b5b5;
    font-size: 24rpx;
}

.item-add{
    position: absolute;
    right: 40rpx;
    bottom: 70rpx;
    width: 108rpx;
    height: 108rpx;
    background: #579af4;
    border-radius: 50%;
}
.item-add:after{
    content: '';
    position: absolute;
    left: 23rpx;
    right: 23rpx;
    top: 50%;
    margin-top: -2rpx;
    height: 4rpx;
    background: #fff;
    border-radius:2rpx;
}
.item-add:before{
    content: '';
    position: absolute;
    top: 23rpx;
    bottom: 23rpx;
    left: 50%;
    margin-left: -2rpx;
    width: 4rpx;
    background: #fff;
    border-radius:2rpx;
}